<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandingPage"
    android:background="@drawable/landingbackground">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/landingPageRegisterButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="430dp"
        android:background="#E57373"
        android:text="Create account"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/landingPageLoginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="360dp"
        android:background="#E57373"
        android:text="Login"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/landingPageGuestButton"
        android:drawableLeft="@drawable/among_us_6008615_960_720"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="90dp"
        android:layout_marginTop="500dp"
        android:background="#E57373"
        android:text="Continue as guest"
        android:textColor="@color/black"
        android:textStyle="bold" />
</RelativeLayout>